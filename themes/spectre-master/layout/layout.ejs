<!DOCTYPE html>

<html style="display:none">
    <%- partial('_partial/head') %>

    <% if(page.layout === 'gallery') { %>
        <!-- Single Gallery Page -->
        <%- partial('_pages/gallery') %>
    <% } else { %>

    <body>
        <div class="off-canvas off-canvas-sidebar-show">
            <!-- off-screen toggle button -->
            <a class="off-canvas-toggle btn btn-link btn-action" href="#sidebar">
                <i class="icon material-icons casino-icons">menu</i>
            </a>

            <div id="sidebar" class="off-canvas-sidebar">
                <div id="sidebar-content">
                    <%- partial('_partial/sidebar') %>
                </div>
            </div>

            <a class="off-canvas-overlay" href="#close"></a>

            <div class="off-canvas-content">
                <main>
                    <%- body %>
                </main>
                <%- partial('_partial/footer') %>
                <%- partial('_partial/toTop') %>
            </div>
        </div>
        <%- partial('_source/footer') %>
    </body>

    <% } %>

</html>