<nav class="navbar navbar-expand-lg">
    <a class="navbar-brand" href="<%- url_for('/') %>">
        <img class="user-avatar" src="<%- theme.cdn_self_domain %><%- theme.avatar %>" alt="头像">
        <div class="site-name gt-c-content-color-first" id="typeitspan">
            <!-- <%= config.title %> -->
        </div>
    </a>
    <!-- <span id="typeitspan"></span> -->
    <script>
        new TypeIt('#typeitspan', {
        strings: "IT.BOB",
        speed: 150, 
        afterComplete: function (instance) {
            instance.destroy();
        }
        }).go();
    </script>
    <button aria-label="Navbar Toggler" class="navbar-toggler" type="button" id="changeNavbar">
        <i class="gt-c-content-color-first" style="font-size: 18px;">
            <svg xmlns="https://www.w3.org/2000/svg" viewBox="0 0 448 512" height="18px" fill="currentColor">
                <path d="M16 132h416c8.837 0 16-7.163 16-16V76c0-8.837-7.163-16-16-16H16C7.163 60 0 67.163 0 76v40c0 8.837 7.163 16 16 16zm0 160h416c8.837 0 16-7.163 16-16v-40c0-8.837-7.163-16-16-16H16c-8.837 0-16 7.163-16 16v40c0 8.837 7.163 16 16 16zm0 160h416c8.837 0 16-7.163 16-16v-40c0-8.837-7.163-16-16-16H16c-8.837 0-16 7.163-16 16v40c0 8.837 7.163 16 16 16z" />
            </svg>
        </i>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <div class="navbar-nav mr-auto" style="text-align: center; ">
            <% theme.menus.forEach(function(menu) { %>
                <% if (menu.picture) { %>
                    <div class="nav-item">
                        <a href="<%= url_for(menu.link) %>" target="<%- menu.target ? menu.target : "_self" %>">
                            <img src="<%- theme.cdn_self_domain %><%- menu.picture %>" class="nofancybox" alt="<%- menu.alt %>" width="<%- menu.picture_width %>" height="<%- menu.picture_height %>">
                        </a>
                    </div>
                <% } else { %>
                    <div class="nav-item">
                        <a href="<%= url_for(menu.link) %>" class="menu gt-a-link" target="<%- menu.target ? menu.target : "_self" %>"><%= menu.name %></a>
                    </div>
                <% } %>
            <% }); %>
        </div>
    </div>
</nav>

<script>
    /* 移动端导航栏展开/收起切换 */
    document.getElementById('changeNavbar').onclick = function() {
        let element = document.getElementById('navbarSupportedContent');
        if (element.style.display === 'none' || element.style.display === '') {
            element.style.display = 'block';
        } else { 
            element.style.display = 'none';
        }
    }
</script>
